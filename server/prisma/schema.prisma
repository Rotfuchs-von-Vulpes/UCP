// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  ID          Int     @id @default(autoincrement())
  Usuario     String  @unique @db.VarChar(255)
  NomeReal    String  @db.VarChar(255)
  Senha       String  @db.VarChar(255)
  IP          String? @db.VarChar(40)
  UltimoLogin BigInt?
  PosX        Float   @default(0)
  PosY        Float   @default(0)
  PosZ        Float   @default(0)
  Mundo       String  @default("world") @db.VarChar(255)
  regData     BigInt  @default(0)
  regIP       String? @db.VarChar(40)
  UltimoLoc   Float?
  Pitch       Float?
  Email       String? @unique @db.VarChar(255)
  hasLogged   Boolean @default(false)
  hasSession  Boolean @default(false)
  toIP        String? @db.VarChar(32)
}
